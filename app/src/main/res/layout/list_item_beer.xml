<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="@dimen/cardview_item_width"
              android:layout_height="wrap_content"
    android:id="@+id/beer_card"
    android:layout_gravity="center"
    android:layout_margin="@dimen/cardview_item_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/cardview_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_item_beer_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_image_beer_label"
            android:src="@drawable/beer_icon_32"/>

        <TextView
            android:id="@+id/list_item_beer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorPrimaryLight"/>

    </LinearLayout>

</android.support.v7.widget.CardView>