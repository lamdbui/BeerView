<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextAppearance.Medium"
        android:text="BeerMapper"/>

    <TextView
        android:id="@+id/widget_favorite_breweries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_favorite_breweries"/>
    <TextView
        android:id="@+id/widget_favorite_breweries_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/widget_favorite_beers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_favorite_beers"/>
    <TextView
        android:id="@+id/widget_favorite_beers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>